<p id="notice"><%= notice %></p>

<h4>Imóveis cadastrados da empresa</h4>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Logradouro</th>
      <th>CEP</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>UF</th>
      <th>Matrícula</th>
      <th>CRI</th>
      <th>Observações</th>
      <th colspan="3"> Ações </th>
    </tr>
  </thead>

  <tbody>
    <% @imovels.each do |imovel| %>
      <tr <%if imovel.socio %> class="danger" <% end %> >
        <td><%= imovel.logradouro %></td>
        <td><%= imovel.cep %></td>
        <td><%= imovel.bairro %></td>
        <td><%= imovel.cidade %></td>
        <td><%= imovel.uf %></td>
        <td><%= imovel.matricula %></td>
        <td><%= imovel.cri %></td>
        <td><%= imovel.observacoes %></td>
        <td><%= link_to 'Exibir', imovel %></td>
        <td><%= link_to 'Editar', edit_imovel_path(imovel) %></td>
        <td><%= link_to 'Deletar', imovel, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
