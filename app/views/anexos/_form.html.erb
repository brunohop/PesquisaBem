<%= simple_form_for@anexo, html: {multipart: true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :arquivo, as: :file, :multiple => true, name: "arquivo" %>
    <%= f.input :descricao, label:'Descrição' %>
  </div>


<%= f.hidden_field :empresa_id, value: @anexo.empresa.id %>
  <div class="form-actions">
    <%= f.button :submit, 'Salvar' %>
  </div>


<% end %>
