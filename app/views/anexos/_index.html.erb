<p id="notice"><%= notice %></p>

<h4>Lista de anexos cadastrados</h4>

<table  class="table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Arquivo</th>
      <th>Descrição</th>
      <th colspan="3"> Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @anexos.each do |anexo| %>
      <tr>
        <td><%= link_to anexo.arquivo_file_name, anexo.arquivo.url %></td>
        <td><%= anexo.descricao %></td>
        <td><%= link_to 'Exibir', anexo %></td>
        <td><%= link_to 'Editar', edit_anexo_path(anexo) %></td>
        <td><%= link_to 'Deletar', anexo, method: :delete, data: { confirm: 'Você tem certeza' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
