<p id="notice"><%= notice %></p>

<h1>Lista de Anexos Cadastrados</h1>

<table  class="table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Arquivo</th>
      <th colspan="3"> Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @anexos.each do |anexo| %>
      <tr>
        <td><%= anexo.arquivo %></td>
        <td><%= link_to 'Exibir', anexo %></td>
        <td><%= link_to 'Editar', edit_anexo_path(anexo) %></td>
        <td><%= link_to 'Deletar', anexo, method: :delete, data: { confirm: 'Você tem certeza' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
