<p id="notice"><%= notice %></p>

<h1>Listing Veiculos</h1>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Ano</th>
      <th>Placa</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Cri</th>
      <th>Observacoes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veiculos.each do |veiculo| %>
      <tr>
        <td><%= veiculo.marca %></td>
        <td><%= veiculo.modelo %></td>
        <td><%= veiculo.ano %></td>
        <td><%= veiculo.placa %></td>
        <td><%= veiculo.cidade %></td>
        <td><%= veiculo.uf %></td>
        <td><%= veiculo.cri %></td>
        <td><%= veiculo.observacoes %></td>
        <td><%= link_to 'Show', veiculo %></td>
        <td><%= link_to 'Edit', edit_veiculo_path(veiculo) %></td>
        <td><%= link_to 'Destroy', veiculo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

