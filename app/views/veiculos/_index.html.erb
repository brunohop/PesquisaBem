<h4>Veículos da Empresa</h4>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Ano</th>
      <th>Placa</th>
      <th>Cidade</th>
      <th>UF</th>
      <th>CRI</th>
      <th>Observações</th>
      <th colspan="3"> Ações </th>
    </tr>
  </thead>

  <tbody>
    <% @veiculos.each do |veiculo| %>
      <tr <%if veiculo.socio %> class="danger" <% end %> >
        <td><%= veiculo.marca %></td>
        <td><%= veiculo.modelo %></td>
        <td><%= veiculo.ano %></td>
        <td><%= veiculo.placa %></td>
        <td><%= veiculo.cidade %></td>
        <td><%= veiculo.uf %></td>
        <td><%= veiculo.cri %></td>
        <td><%= veiculo.observacoes %></td>
        <td><%= link_to 'Exibir', veiculo %></td>
        <td><%= link_to 'Editar', edit_veiculo_path(veiculo) %></td>
        <td><%= link_to 'Deletar', veiculo, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
