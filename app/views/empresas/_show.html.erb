<p id="notice"><%= notice %></p>

<h1>Lista de Empresas Cadastradas</h1>

<table class="table-bordered table-hover table-condensed" id="empresas">
  <thead>
    <tr>
      <th>Razão Social</th>
      <th>CNPJ</th>
      <th>Cidade</th>
      <th>UF</th>
      <th  colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.razaoSocial %></td>
        <td><%= empresa.cnpj %></td>
        <td><%= empresa.cidade %></td>
        <td><%= empresa.uf %></td>
        <td><%= link_to 'Exibir', empresa %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Excluir', empresa, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Empresa', new_empresa_path %>
