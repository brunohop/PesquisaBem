<h4>Sócios da empresa</h4>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th>Data de Nascimento</th>
      <th>Administrador</th>
      <th colspan="3"> Ações </th>
    </tr>
  </thead>

  <tbody>
    <% @socios.each do |socio| %>
      <tr>
        <td><%= socio.nome %></td>
        <td><%= socio.cpf %></td>
        <td><%= socio.dataNascimento %></td>
        <td><%= socio.administrador %></td>
        <td><%= link_to 'Exibir', "/socios/#{socio.id}?empresa_id=#{@empresa.id}"%></td>
        <td><%= link_to 'Editar', edit_socio_path(socio) %></td>
        <td><%= link_to 'Deletar', socio, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
