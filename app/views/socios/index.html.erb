<p id="notice"><%= notice %></p>

<h1>Exibindo Sócios</h1>

<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
      <th>Data de Nascimento</th>
      <th>Administrador</th>
      <th>Empresa</th>
      <th colspan="3"> Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @socios.each do |socio| %>
      <tr>
        <td><%= socio.nome %></td>
        <td><%= socio.cpf %></td>
        <td><%= socio.dataNascimento %></td>
        <td><%= socio.administrador %></td>
        <td><%= socio.empresa.razaoSocial %></td>
        <td><%= link_to 'Exibir', socio %></td>
        <td><%= link_to 'Editar', edit_socio_path(socio) %></td>
        <td><%= link_to 'Deletar', socio, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if params[:commit] == '' %>
<%= link_to 'Novo Sócio', new_socio_path %>
<% end %>
